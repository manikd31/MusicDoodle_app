                    android:text="Currently Playing"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/holo_orange_light" />

                <TextView
                    android:id="@+id/current_file_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    tools:text="default_file_name" />

            </LinearLayout>

            <ImageView
                android:id="@+id/save_layout"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/instrument_circle"
                android:src="@drawable/ic_save_button_white" />

            <ImageView
                android:id="@+id/records"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/instrument_circle"
                android:src="@drawable/ic_show_previous_records_white" />

        </LinearLayout>

        <LinearLayout

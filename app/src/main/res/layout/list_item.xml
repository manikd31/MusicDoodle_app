<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:minHeight="60sp">

    <ImageView
        android:layout_width="50sp"
        android:id="@+id/default_image"
        android:layout_height="50sp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_record_icon"
        android:layout_marginRight="10sp"
        android:layout_gravity="center"
        android:background="@drawable/instrument_circle"/>

    <TextView
        android:id="@+id/display_audio_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/default_image"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-condensed"
        android:lines="1"
        android:textColor="@android:color/white"
        tools:text="default_file_name"
        android:textAppearance="?android:textAppearanceLarge"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/display_audio_date"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/darker_gray"
            tools:text="Mar 31, 1996"
            android:gravity="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/display_audio_time"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/darker_gray"
            tools:text="08:57 PM"
            android:gravity="end"/>

    </LinearLayout>

</LinearLayout>